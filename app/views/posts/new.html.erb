<!-- Form for creating a new post -->
<h1>New Post</h1><br>
<%= form_with(model: current_user.posts.build, url: posts_path, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br><br>
  <%= form.label :content %>
  <%= form.text_area :text %><br><br>
  <%= form.submit 'Create Post' %>
<% end %>